<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/vsPlayer.css">
    <title>VS Computer</title>
</head>
<body>
    <%- include('../partials/header') %>
    <div id="character-programming">
        <div class="content">
            <h1>Character Programming Mode</h1>
        </div>
        <p>
            <form id="character-type">
                <input type="radio" value="attack" v-model="type">attack
                <input type="radio" value="speed" v-model="type">speed
                <input type="radio" value="tank" v-model="type">tank
                <input type="radio" value="custom" v-model="type" checked>custom
            </form>
        </p>
        <code><pre id="character-editor"></pre></code>
        <button id="start" class="btn-square" @click="onClick" :disabled="isDisabled">Start!</button>
    </div>

    <div id="game">
        <div class="content">
            <div id="canvas"></div>
            <div id="editors">
                <div id="editor1">
                    <code><pre id="player1-editor"></pre></code>
                </div>
                <div id="editor2">
                    <code><pre id="player2-editor"></pre></code>
                </div>

            </div>
            <div id="terminal">
                <code><pre id="player1-terminal"></pre></code>
                <code><pre id="player2-terminal"></pre></code>
            </div>
            <div class="button_wrapper">
                <button id="player1-ready" class="btn-square"@click="onClick" :disabled="isDisabled">Ready</button>
                <button id="reset" class="btn-square" @click="onClick">Reset</button>
            </div>
        </div>
    </div>

    <!-- <iframe src="/sound/bgm_cyber35.mp3" allow="autoplay" style="display:none" id="iframeAudio"></iframe> -->
    <audio autoplay loop  id="playAudio">
        <source src="/sound/bgm_cyber35.mp3">
    </audio>
    

    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.12/ace.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.12/ext-language_tools.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/p5@1.0.0/lib/p5.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="../socket.io/socket.io.js"></script>
    <script src="/js/utils/character.js"></script>
    <script src="/js/utils/hacking.js"></script>
    <script src="/js/utils/sound.js"></script>
    <!-- <script src="/js/utils/bgm.js"></script> -->
    <script src="/js/vsComputer/settings.js"></script>
    <script src="/js/vsComputer/main.js"></script>
    <script src="/js/vsComputer/render.js"></script>
    
</body>
</html>